<%= render "shared/header" %>

<div class="wrapper">
  <div class="side-bar">
    <ul class="lists-left">
      <li><%= link_to '会社情報', company_path(current_admin) %></li>
      <li><%= link_to 'スタッフ一覧', admins_home_path(current_admin) %></li>
      <li><%= link_to '勤務計画閲覧', search_work_schedules_path, class: "text1" %></li>
      <li><%= link_to '勤務計画作成', new_work_schedule_path, class: "text1" %></li>
    </ul>
  </div>

  <div class="content">
    <h2 class="company-name"><%= @admin.company.name %></h2>

    <div class="team-desc">
      <p class="desc-text">営業時間：<%= "#{@admin.company.opening_time.strftime('%H:%M')}〜#{@admin.company.closing_time.strftime('%H:%M')}" %></p>
      <p class="desc-text">チーム人数：<%= @employees.length+1 %></p>
    </div>

    <div class="home-contents">
      <div class="home-content">
        <div class="home-content1">社員番号</div>
        <div class="home-content2">名前</div>
        <div class="home-content3">入社日</div>
      </div>

      <div class="home-content">
        <div class="home-content1"><%= link_to @admin.number, admins_show_path %></div>
        <div class="home-content2"><%= @admin.last_name %><%= @admin.first_name %></div>
        <div class="home-content3"><%= @admin.joining_date %></div>
      </div>

      <% @employees.each do |employee| %>
        <div class="home-content">
          <div class="home-content1"><%= link_to employee.number, employees_show_path(employee_id: employee.id) %></div>
          <div class="home-content2"><%= employee.last_name %><%= employee.first_name %></div>
          <div class="home-content3"><%= employee.joining_date %></div>
          <%= link_to '編集', edit_employee_registration_path(employee_id: employee.id) %>
          <%= link_to '退職', admins_home_path(employee.id), data: { confirm: "Are you sure?" }, method: :delete, class: "staff-delete-btn" %>
        </div>
      <% end %>
      <%= link_to 'スタッフを追加', new_employee_registration_path, class: "staff-new-btn" %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>