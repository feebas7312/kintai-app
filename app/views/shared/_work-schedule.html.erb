<h2 class="search-title">勤務計画検索</h2>

<%= form_with url: search_work_schedules_path, method: :get, local: true do |f| %>
  <div class='input-date-wrap'>
    <%= raw sprintf(
                f.date_select(
                  :search_date,
                  class:'select-date',
                  use_month_numbers: true,
                  discard_day: true,
                  prompt:'--',
                  date_separator: '%s'),
                "<p> 年 </p>") + "<p> 月 </p>" %>
  <%= f.submit "検索", class: "seach-btn" %>
  </div>
<% end %>