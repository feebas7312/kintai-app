<div class="account-page">
  <div class="account-page__inner--left">
    <h2>Log in</h2>
    <h5>登録されているスタッフでログイン</h5>
    <%= render "employees/shared/links" %>
    <div class="account-link">
      <%= link_to "責任者の方はこちら", root_path %>
    </div>
  </div>
  
  <div class="account-page__inner--right">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "shared/flash", model: f.object %>
      <div class="field">
        <div class="field-label">
          <%= f.label :number, '社員番号' %>
        </div>
        <div class="field-input">
          <%= f.text_field :number, autofocus: true, autocomplete: "number" %>
        </div>
        <div class="field-label">
          <%= f.label :password, 'パスワード' %>
        </div>
        <div class="field-input">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class: "btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>