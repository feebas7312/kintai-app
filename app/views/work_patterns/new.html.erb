<div class="account-page">
  <div class="account-page__inner--left">
    <h2>New</h2>
    <h5>出勤パターンを追加する</h5>
    <div class="account-link">
      <%= link_to '戻る', company_path(current_admin) %>
    </div>
  </div>

  <div class="account-page__inner--right">
    <%= form_with model: [@company, @work_pattern], url: company_work_patterns_path(@company), local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :start_time, '出勤時間' %>
        </div>
        <div class='field-input'>
          <%= f.text_field :start_time %>
        </div>
        <div class='field-label'>
          <%= f.label :end_time, '退勤時間' %>
        </div>
        <div class='field-input'>
          <%= f.text_field :end_time %>
        </div>
        <div class="actions">
          <%= f.submit '登録', class: 'btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>