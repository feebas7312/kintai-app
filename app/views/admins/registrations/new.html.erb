<div class="account-page">
  <div class="account-page__inner--left">
    <h2>Sign up</h2>
    <h5>新しくユーザーを登録する（責任者専用）</h5>
    <%= render "admins/shared/links" %>
  </div>
  
  <div class="account-page__inner--right">
    <%= form_with model: @admin, url: admin_registration_path, local: true do |f| %>
      <div class="field">
        <%= render "admins/shared/error_messages", model: f.object %>
        <div class="field-label">
          <%= f.label :joining_date, '入社日' %>
        </div>
        <div class="field-input">
          <%= f.date_field :joining_date %>
        </div>
        <div class="field-label">
          <%= f.label :number, '社員番号' %>
        </div>
        <div class="field-input">
          <%= f.text_field :number, autofocus: true, autocomplete: "employee_number" %>
        </div>
        <div class="field-label">
          <%= f.label :last_name, '姓' %>
        </div>
        <div class="field-input">
          <%= f.text_field :last_name %>
        </div>
        <div class="field-label">
          <%= f.label :first_name, '名' %>
        </div>
        <div class="field-input">
          <%= f.text_field :first_name %>
        </div>
        <div class="field-label">
          <%= f.label :email, 'メールアドレス' %>
        </div>
        <div class="field-input">
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
        <div class="field-label">
          <%= f.label :password, 'パスワード' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="field-input">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field-label">
          <%= f.label :password_confirmation, 'パスワード確認' %>
        </div>
        <div class="field-input">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "次へ", class: "btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>